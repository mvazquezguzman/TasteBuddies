<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/background_cream"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/search_background"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="What are you looking for?"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/text_gray"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:imeOptions="actionSearch"
            android:inputType="text" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            android:contentDescription="Search"
            app:tint="@color/text_dark" />

    </LinearLayout>

    <!-- Category Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        android:columnOrderPreserved="false">

        <!-- Breakfast -->
        <LinearLayout
            android:id="@+id/categoryBreakfast"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_breakfast"
                android:contentDescription="Breakfast icon"
                android:layout_marginBottom="8dp"
                app:tint="@color/ivory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textColor="@color/ivory"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Lunch -->
        <LinearLayout
            android:id="@+id/categoryLunch"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_lunch"
                android:contentDescription="Lunch icon"
                android:layout_marginBottom="8dp"
                app:tint="@color/ivory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:textColor="@color/ivory"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Dinner -->
        <LinearLayout
            android:id="@+id/categoryDinner"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_dinner"
                android:contentDescription="Dinner icon"
                android:layout_marginBottom="8dp"
                app:tint="@color/ivory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:textColor="@color/ivory"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Coffee -->
        <LinearLayout
            android:id="@+id/categoryCoffee"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_coffee"
                android:contentDescription="Coffee icon"
                android:layout_marginBottom="8dp"
                app:tint="@color/ivory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"
                android:textColor="@color/ivory"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Bar -->
        <LinearLayout
            android:id="@+id/categoryBar"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_bar"
                android:contentDescription="Bar icon"
                android:layout_marginBottom="8dp"
                app:tint="@color/ivory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bar"
                android:textColor="@color/ivory"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Dessert -->
        <LinearLayout
            android:id="@+id/categoryDessert"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_dessert"
                android:contentDescription="Dessert icon"
                android:layout_marginBottom="8dp"
                app:tint="@color/ivory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dessert"
                android:textColor="@color/ivory"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </GridLayout>

    </LinearLayout>

</LinearLayout>
